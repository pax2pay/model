{
	"name": "@pax2pay/model",
	"version": "0.0.59",
	"description": "Model for the new Pax2Pay API.",
	"author": "Pax2Pay Ltd.",
	"license": "MIT",
	"repository": "https://github.com/pax2pay/model",
	"bugs": {
		"url": "https://github.com/pax2pay/model/issues"
	},
	"homepage": "https://pax2pay.com",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.test.json"
			}
		},
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely|@pax2pay|cloudly-http|cloudly-rest)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"dev": "watch 'npm run build' .",
		"lint": "eslint '**/*.{js,ts,tsx}'",
		"fix": "eslint '**/*.{js,ts,tsx}' --fix",
		"build": "tsc -p .",
		"test": "jest --maxWorkers=2",
		"test:watch": "watch jest",
		"prepare": "npm run build",
		"clean": "rm -rf dist node_modules coverage"
	},
	"devDependencies": {
		"@babel/core": "^7.24.3",
		"@types/isomorphic-fetch": "^0.0.39",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.30",
		"@types/node-fetch": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "7.3.1",
		"@typescript-eslint/parser": "7.3.1",
		"babel-core": "^6.26.3",
		"babel-jest": "^29.7.0",
		"dotenv": "^16.4.5",
		"eslint": "^8.57.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20221021",
		"eslint-plugin-simple-import-sort": "^12.0.0",
		"isomorphic-fetch": "^3.0.0",
		"jest": "^29.7.0",
		"prettierx": "github:utily/prettierx#utily-20221021",
		"ts-jest": "^29.1.2",
		"typescript": "^5.4.3",
		"watch": "^1.0.2"
	},
	"dependencies": {
		"@pax2pay/model-cde": "^0.0.61",
		"authly": "^3.0.11",
		"cloudly-http": "^0.1.7",
		"cloudly-rest": "^0.1.4",
		"cryptly": "^4.0.4",
		"gracely": "^2.0.8",
		"isoly": "^2.3.8"
	}
}
